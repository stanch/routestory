<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="aquadark">#358482</color>
    <color name="orange">#fa673d</color>

    <style name="AppTheme" parent="@style/Theme.story">
    	<item name="android:windowBackground">@drawable/startup_screen_gradient</item>
    </style>
    
    <style name="TitleStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:background">@color/aquadark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3sp</item>
    </style>
    
    <style name="TagAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="ExploreSectionAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>