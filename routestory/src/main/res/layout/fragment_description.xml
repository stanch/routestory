<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Author"
	        android:layout_marginLeft="8dp"
	        android:textAppearance="@style/ExploreSectionAppearance" />
	    
	    <ImageView
	        android:id="@+id/authorPicture"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"/>
	    
	    <TextView
	        android:id="@+id/authorName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:textAppearance="@android:style/TextAppearance.Medium" />
	
	    <TextView
	        android:id="@+id/storyDescriptionHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/description"
	        android:layout_marginTop="15sp"
	        android:layout_marginLeft="8dp"
	        android:textAppearance="@style/ExploreSectionAppearance" />
	
	    <TextView
	        android:id="@+id/storyDescription"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:textAppearance="@android:style/TextAppearance.Medium" />
	
	    <TextView
	        android:id="@+id/storyTagsHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tags"
	        android:layout_marginTop="15sp"
	        android:layout_marginLeft="8dp"
	        android:textAppearance="@style/ExploreSectionAppearance" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:id="@+id/storyTags"
	        android:layout_marginLeft="8dp">
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/storyTagRows"
	            android:orientation="vertical">
	        </LinearLayout>
	
	    </LinearLayout>
	
	</LinearLayout>
</ScrollView>